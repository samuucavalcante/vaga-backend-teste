  "license": "MIT",
  "scripts": {
    "infra:up": "docker-compose up -d postgres_main && sleep 1 && yarn prisma db push",
    "infra:down": "docker-compose down",
    "dev": "tsx watch src/server.ts",
    "test": "yarn infra:down && yarn pre:test && sleep 1 && yarn prisma db push && vitest --run || yarn post:test",
    "pre:test": "docker-compose up -d postgres_test",
    "post:test": "docker-compose down "
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.27",
    "prisma": "^5.11.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "zod": "^3.22.4"
  }
}
