{
  "name": "vaga-backend-teste",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/samuucavalcante/vaga-backend-teste",
  "author": "Samuel Cavalcante <samuel-icm-dantas@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "infra:up": "docker-compose up -d postgres_main -d redis && sleep 1 && yarn prisma db push",
    "infra:down": "docker-compose down",
    "infra:reset": "yarn infra:down && yarn infra:up",
    "start": "yarn infra:up && yarn dev || yarn infra:down",
    "dev": "yarn tsx ./src/cluster.ts",
    "test": "yarn infra:down && yarn pre:test && sleep 1 && yarn prisma db push && vitest --run --dir ./test/integrations || yarn post:test",
    "test:e2e": "yarn pretest:e2e && vitest --run --dir ./test/e2e/ && yarn posttest:e2e || yarn posttest:e2e",
    "pretest:e2e": "docker-compose up -d postgres_test -d redis_test",
    "postest:e2e": "docker-compose down "
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.27",
    "@types/supertest": "^6.0.2",
    "prisma": "^5.11.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@types/multer": "^1.4.11",
    "bull": "^4.12.2",
    "bull-board": "^2.1.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "multer": "^1.4.5-lts.1",
    "supertest": "^6.3.4",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  }
}
